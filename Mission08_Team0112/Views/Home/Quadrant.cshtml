@model List<ToDo>

<div class="container border border-dark border-3 rounded-3 bg-light">
    
    @* First row *@
    <div class="row">
        <div class="col-12 text-center border-bottom border-dark">
            <h3>Stephen Covey's Time Management Matrix</h3>
            <br>
        </div>
    </div>
   

    
    @* Second row *@
    <div class="row text-center border-bottom border-dark">
        <div class="col-2 d-flex align-items-center justify-content-center border-end border-dark">
            <!-- Blank space -->
        </div>
        <div class="col-5 border-end border-dark">
            <h4>Urgent</h4>
            
        </div>
        <div class="col-5">
            <h4>Not Urgent</h4>
            
        </div>
    </div>


    @* Third row *@
    <div class="row text-center">
        <div class="col-2 d-flex align-items-center justify-content-center border-end border-dark">
            <h4 class="vertical-text">Important</h4>
        </div>

        <div class="col-5 text-center border-end border-dark">
            <h6 class="fw-bold">Quadrant 1</h6>
            @foreach (var task in Model)
            {
                @if (task.Quadrant == 1 && !task.Completed)
                {
                    <div class="d-flex justify-content-center align-items-center mb-2">
                        <p class="mb-0">@task.TaskName</p>
                        <a class="btn btn-info ms-2" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                        <a class="btn btn-danger ms-2" asp-controller="Home" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
                    </div>
                }
            }
            
        </div>

        <div class="col-5 text-center">
            <h6 class="fw-bold">Quadrant 2</h6>
            @foreach (var task in Model)
            {
                @if (task.Quadrant == 2 && !task.Completed)
                {
                    <div class="d-flex justify-content-center align-items-center mb-2">
                        <p class="mb-0">@task.TaskName</p>
                        <a class="btn btn-info ms-2" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                        <a class="btn btn-danger ms-2" asp-controller="Home" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
                    </div>
                }
            }
            
        </div>

    </div>

    @* Fourth row *@
    <div class="row text-center border-top border-dark">
        <div class="col-2 d-flex align-items-center justify-content-center border-end border-dark">
            <h4 class="vertical-text">Not Important</h4>
        </div>

        <div class="col-5 text-center border-end border-dark">
            <h6 class="fw-bold">Quadrant 3</h6>
            @foreach (var task in Model)
            {
                @if (task.Quadrant == 3 && !task.Completed)
                {
                    <div class="d-flex justify-content-center align-items-center mb-2">
                        <p class="mb-0">@task.TaskName</p>
                        <a class="btn btn-info ms-2" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                        <a class="btn btn-danger ms-2" asp-controller="Home" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
                    </div>
                }
            }
          
            
        </div>

        <div class="col-5 text-center">
            <h6 class="fw-bold">Quadrant 4</h6>
            @foreach (var task in Model)
            {
                @if (task.Quadrant == 4 && !task.Completed)
                {
                    <div class="d-flex justify-content-center align-items-center mb-2">
                        <p class="mb-0">@task.TaskName</p>
                        <a class="btn btn-info ms-2" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                        <a class="btn btn-danger ms-2" asp-controller="Home" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
                    </div>
                }
            }
        
            
        </div>

    </div>

</div>





