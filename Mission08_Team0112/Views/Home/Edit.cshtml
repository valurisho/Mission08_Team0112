
@model Mission08_Team0112.Models.TaskViewModel

@{
    ViewData["Title"] = "Edit Task";
}

<h2>Edit Task</h2>

<form asp-action="Edit" asp-controller="Home" method="post">
    <input type="hidden" name="Id" value="@Model.CategoryId" />

    <div class="mb-3">
        <label for="TaskName" class="form-label">Task Name</label>
        <input type="text" class="form-control" id="TaskName" name="TaskName" value="@Model.TaskName" required />
    </div>

    <div class="mb-3">
        <label for="DueDate" class="form-label">Due Date</label>
        <input type="date" class="form-control" id="DueDate" name="DueDate" value="@Model.DueDate?.ToString("yyyy-MM-dd")" />
    </div>

    <div class="mb-3">
        <label for="Quadrant" class="form-label">Quadrant</label>
        <select class="form-control" id="Quadrant" name="Quadrant" required>
            <option value="1" selected="@(Model.Quadrant == 1)">Important / Urgent</option>
            <option value="2" selected="@(Model.Quadrant == 2)">Important / Not Urgent</option>
            <option value="3" selected="@(Model.Quadrant == 3)">Not Important / Urgent</option>
            <option value="4" selected="@(Model.Quadrant == 4)">Not Important / Not Urgent</option>
        </select>
    </div>

    <div class="mb-3">
        <label for="Category" class="form-label">Category</label>
        <select class="form-control" id="Category" name="Category">
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.Value" selected="@(Model.CategoryId.ToString() == category.Value)">@category.Text</option>
            }
        </select>
    </div>

    <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="Completed" name="Completed" @(Model.Completed ? "checked" : "") />
        <label for="Completed" class="form-check-label">Mark as Completed</label>
    </div>

    <button type="submit" class="btn btn-primary">Update Task</button>
</form>
